<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.kategori"
    android:background="@drawable/bg_patt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="200dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:elevation="6dp"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/kategori_kerajinan"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/krj_"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/secondaryLightColor"
                    android:elevation="1dp"/>

                <LinearLayout
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kerajinan"
                        />



                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/kategori_sembako"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sbk_"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/secondaryLightColor"
                        android:elevation="1dp"/>

                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sembako"
                            />



                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/kategori_sampah"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/smph"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/secondaryLightColor"
                        android:elevation="1dp"/>

                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sampah"
                            />



                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                 <ImageView
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:src="@drawable/ic_arrow_back_black_24dp"

                     />

                <TextView
                    android:id="@+id/kembalikeberanda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kembali ke Beranda"
                    android:gravity="right"/>
                </LinearLayout>
        </LinearLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>

</RelativeLayout>